<%- include(`notloginheader`) %>

<div class="registerbox">

    <form action="/register" method="post">

        <h1> LoremSchool Register </h1>

        <% if (typeof errorBox != `undefined`) { %>
            <% errorBox.forEach(function(error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <p> <%= error.msg %> </p>
                  </div>
            <% }) %>
        <% } %>

        <input type="text" name="firstName" placeholder="First Name" class="first">
        <input type="text" name="lastName" placeholder="Last Name">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password">
        <input type="password" name="passwordConfirm" placeholder="Password Confirmation" class="last">
        
        <div class="loginregis">
            <button type="submit"> Register </button> 
            <a href="/login"> Login </a>
        </div>
        
    </form>

</div>

<%- include(`footer`) %>
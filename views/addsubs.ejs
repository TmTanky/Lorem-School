<%- include(`header`) %>

<div class="burgerside">
    <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="/editprofile"> Edit Profile </a>
    <a href="/removesubjects"> Remove Subjects </a>
    <a href="/logout"> Logout </a>
  </div>
  
  <img src="https://img.icons8.com/android/24/000000/menu.png" onclick="openNav()" class="hamburger"/> 
  </div>

<div class="settingbox">
    <div class="settings">
        <li> <a href="/editprofile"> Edit Profile </a> </li>
        <li> <a href="/removesubjects"> Remove Subjects </a> </li>
    </div>

    <div class="addsubfeed">
        <h2> Add Subjects </h2>

        <form action="/addsubjects" method="post">

            <% if (typeof errorBox != `undefined`) { %>
                <% errorBox.forEach(function(error) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <p> <%= error.msg %> </p>
                      </div>
                <% }) %>
            <% } %>
            
            <% subs.map((sub) => { %>
                <span> 
                    <input type="radio" name="subject" value="<%= sub._id %>">
                    <label for="subject"> <%= sub.name %> </label>
                </span>
            <% }) %>
            
            <button type="submit"> Add </button>
            
        </form>
    </div>
</div>

<%- include(`footer`) %>

